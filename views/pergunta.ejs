<%- include("partials/header.ejs"); %>

    <body>
        <%- include("partials/navbar.ejs"); %>
            <div class="container">
                <hr>
                <div class="card shadow m-4">
                    <div class=" text-light dark-bg p-2">
                        <h3 class="m-2">
                            <%= pergunta.titulo %>
                        </h3>
                    </div>
                    <div class="card-body m-3">
                    <p class="m-2">
                        <%= pergunta.descricao %>
                    </p>
                </div>
                <div class="card-footer">
                    <form method="POST" class="p-2" action ="/responder">
                        <h3>Responda</h3>
                        <label>Sua resposta:</label>
                        <textarea placeholder="Digite sua resposta" class="form-control m-2" name="corpo"></textarea>
                        <input type="hidden" name="pergunta"  value="<%= pergunta.id %>">
                        <button class="btn btn-secondary m-2">Responder</button>
                    </form>
                </div>
                <div class="card-body">
                <h3 class="m-2 p-2">Respostas:</h3>
                <% respostas.forEach(resposta=>{ %>
                    <div class="card m-4 p-2">
                        <p class="m-1 p-1"><%= resposta.corpo %></p>
                    </div>
                    <% }) %>
                </div>
            </div>
            </div>
    </body>
    <%- include("partials/footer.ejs"); %>