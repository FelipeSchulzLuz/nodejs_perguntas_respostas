<%- include("partials/header.ejs"); %>

    <body>
        <%- include("partials/navbar.ejs"); %>
            <div class="container-fluid">
                <div class="container">
                    <h3>Perguntas</h3>
                    <hr>
                    <a href="/perguntar" class="btn btn-secondary m-2">Fazer pergunta</a>
                    <% perguntas.forEach(pergunta=> { %>
                        <div class="card shadow m-4">
                            <div class="card-header text-light dark-bg p-2">
                                <h3>Pergunta #<%= pergunta.id %>
                                </h3>
                            </div>
                            <div class="card-body m-2">
                                <h3 class="m-2">
                                    <%= pergunta.titulo %>
                                </h3>
                                <br>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-secondary" href="/pergunta/<%= pergunta.id %>">Responder</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
    </body>
    <%- include("partials/footer.ejs"); %>